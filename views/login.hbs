{{#if error}}
  <div class="alert alert-danger" role="alert">
    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
    <span class="sr-only">Error:</span>
    {{error}}
  </div>
{{/if}}
{{#if user}}
  <div id="modal" class="modal show" tabindex="-1" role="dialog" style="height: 80vh; width: 100%; margin-top: 20vh">
    <div class="modal-dialog" style="margin: 0; height: 80vh; width: 100%">
      <div class="modal-content" style="margin: 0; height: 80vh; width: 100%">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" style="text-align: center; font-size: 80px">Verification</h4>
        </div>
        <form action="/verify" method='post' style="height: 70vh">
          <div class="modal-body" style="text-align: center; height: 10vh">
            {{#if rerror}}
            <div class="alert alert-danger" role="alert" style="font-size: 40px">
              <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
              <span class="sr-only">Error:</span>
              {{rerror}}
            </div>
            {{else}}
            <label style="font-size: 40px;">Enter verification code here</label></br>
            {{/if}}
            <input name="code" style="height: 3vh; font-size:28px; text-align: center;"></input>
            <input name="id" value="{{user._id}}" style="display: none"></input>
          </div>
          <div class="modal-footer" style="height: 40vh; text-align: center">
            <button type="submit" class="btn btn-primary" style="width: 100%; height: 5vh; font-size: 30px">Submit</button>
            <img src="/images/homazonIcon.jpg" style="height: 30vh; margin-top: 15vh;">
          </div>
        </form>
      </div>
    </div>
  </div>
{{/if}}
<form method="POST" style="max-width: 100%; margin: auto; margin-top: 50px; padding: 30px 30px 30px 30px; height: 26vh;">
<div style="text-align: center; background: #232f3e;">
  <img src="/images/homazon.png" style="height: 40%; width: 80%; text-align: center;">
</div>
  <div class="form-group">
    <label style="font-size: 40px">Phone number</label>
    <input type="text" name="username" class="form-control" style="height: 5vh; font-size:40px">
  </div>
  <div class="form-group">
    <label style="font-size: 40px">Password</label>
    <input type="password" name="password" class="form-control" style="height: 5vh; font-size:40px">
  </div>
  <div class="form-group" style="display: flex; flex-direction: column; height: 40vh">
    <button class="btn btn-success" style="margin-top: 40px; height: 90%; font-size: 50px;">Log in</button>
    <a href='/login/facebook' class="btn btn-primary" style="margin-top: 40px; height: 70%;
  font-size: 50px; padding-top: 8%">Log in with Facebook</a>
    <a class="btn btn-info" href="/register" style="margin-top: 40px; height: 70%;
  font-size: 50px; padding-top: 8%;">Register</a>
  </div>
</form>