{{#if error}}
  <div class="alert alert-danger" role="alert">
    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
    <span class="sr-only">Error:</span>
    {{error}}
  </div>
{{/if}}
<form method="POST" style="max-width: 100%; margin: auto; margin-top: 50px; padding: 30px 30px 30px 30px; height: 26vh;">
  <div class="form-group">
    <label class="user-form">Username</label>
    <input type="text" name="username" class="form-control" style="height: 5vh; font-size:40px">
  </div>
  <div class="form-group">
    <label class="user-form">Password</label>
    <input type="password" name="password" class="form-control" style="height: 5vh; font-size:40px">
  </div>
  <div class="form-group" style="display: flex; flex-direction: column">
    <button id='submit' class="button" style="background: transparent">
      <span class="btn-text">Login</span>
    </button>
  </div>
  <div class="form-group" style="display: flex; flex-direction: column">
    <a class="button" href='/register'>
      <span class="btn-text">Register</span>
    </a>
  </div>
  <div class="form-group">
      <a href='/login/facebook' class="myButton">Log in with Facebook</a>
  </div>
</form>
