
<div class="container">
	<a class="button" href='/'>
		<span class="btn-text">New Workout</span>
	</a>
</div>
<div class="container" style="display: flex; flex-direction: column">
	<h1>Hey {{user.username}}!</h1>
	<br>
	<h2>Your Workouts</h2>
	{{# each user.workouts}}
	<div class="container">
		<form method="GET" action="/savedWorkout">
			<input style="display:none;" name="workout" value="{{_id}}"></input>
			<button class="button profile-view"><span class="btn-text">{{name}}</span></button>
		</form>
		<form method="POST" action="/deleteWorkout">
			<button class="button" name="id" value="{{_id}}">
				<span class="btn-text">
					<i class="fa fa-trash" aria-hidden="true"></i>
				</span>
			</button>
		</form>
	</div>
	{{/each}}
</div>
